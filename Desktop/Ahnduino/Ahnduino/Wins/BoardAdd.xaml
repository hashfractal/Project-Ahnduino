<Window x:Class="Ahnduino.Wins.BoardAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ahnduino.Wins"
        mc:Ignorable="d"
        Title="BoardAdd" Height="450" Width="800">
	<Grid Grid.Column="2" Background="LightGray">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="65"/>
				<RowDefinition Height="3*"/>
				<RowDefinition/>
				<RowDefinition Height="80"/>
			</Grid.RowDefinitions>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Border CornerRadius="10" Margin="8" Background="White">
					<TextBox FontSize="30" Background="Transparent" BorderBrush="Transparent">
					제목
					</TextBox>
				</Border>
			</Grid>


			<Border Grid.Row="1" CornerRadius="10" Margin="8,0,8,8" Background="White">
				<TextBox FontSize="20" Background="Transparent" BorderBrush="Transparent">
				내용
				</TextBox>
			</Border>

			<Border Grid.Row="2" CornerRadius="10" Margin="8,0,8,8" Background="White">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="100"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<Border Background="#008f5e" CornerRadius="10" Margin="0,8,0,8" Width="70">
						<Button Content="사진 추가" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
					</Border>
				</Grid>

				
			</Border>

			<Border Grid.Row="3" CornerRadius="10" Margin="8,0,8,8" Background="Transparent">
				<StackPanel Orientation="Horizontal">
					<Border Background="#008f5e" CornerRadius="10" Margin="8" Width="100">
						<Button Content="게시글 추가" Background="Transparent" BorderBrush="Transparent" Foreground="White"/>
					</Border>

				</StackPanel>
			</Border>



		</Grid>
	</Grid>
</Window>
